/* components/cart/cart.wxss */
@import '/custom-tab-bar/nav-bottom-font/iconfont.wxss';
/*模板*/
.cart{
  width: 100vw;
  height: 10rem;
  background-color: green;
}

.empty{
  background-color: rgb(235, 235, 235);
  width: 100vw;
  text-align: center;
  color: rgba(0,0,0,0.27);
  font-size: 1rem;
  height: 3rem;
  line-height: 3rem;
}

.empty > span:nth-child(1){
  font-size: 1.5rem;
  margin-right: 0.5rem;
}

.empty span:nth-child(3){
  padding: 0.2rem 0.5rem 0.2rem 0.5rem;
  margin-left: 0.5rem;
  border: 1px solid rgba(0,0,0,0.27);
  border-radius: 1rem;
}

.guess p {
  text-align: center;
  font-size: 1rem !important;
  height: 3rem;
  line-height: 3rem;
} 

.guess > p::after{
  display: inline-block;
  content: '';
  height: 1px;
  width: 5rem;
  position: relative;
  top: -0.35rem;
  margin: 0 1rem 0 1rem;
  background-color: #e0e0e0;
}

.guess > p::before{
  display: inline-block;
  content: '';
  height: 1px;
  width: 5rem;
  position: relative;
  top: -0.35rem;
  margin: 0 1rem 0 1rem;
  background-color: #e0e0e0;
}

.guess view{
  display: flex;
  flex-wrap: wrap;
}
.guess view view{
  width: 47%;
  margin: 0.2rem 1% 0.2rem 2%;
}
.guess view view image {
  width: 100%;
}

.guess view view p{
  display: block;
  
}
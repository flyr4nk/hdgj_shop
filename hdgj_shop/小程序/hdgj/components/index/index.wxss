/* components/index/index.wxss */

.carousel{
  background-color: white;
  position: relative;
}

.carousel image{
  border-radius: 0.5rem;
  width: 95%;
  margin:2.5% 2.5% 2.5% 2.5%;
  height: 13rem;
} 

.carousel view{
  position: absolute;
  bottom: 0.75rem;
  width: 100%;  
}

.carousel view view{
  display: flex;
  flex-direction: row;
  justify-content:center;
}

.carousel view view span {
  border-radius: 100%;
  width: 0.5rem;
  height: 0.5rem;
  background-color: rgba(216, 30, 6,0.7);
  margin-right: 0.3rem;
}

.menu{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.menu view{
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 0.75rem;
  margin: 0rem 1rem 0.5rem 1rem;
}

.menu view image{
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 100%;
  margin: 0 auto;
  margin-bottom: 0.2rem;
}

.hot_block{
  width: 95%;
  margin:0 auto;
  border-top: 1px solid #F1F1F1;
}
.hot_block image{
  width: 100%;
  height: 16rem;
}

.hot_block view{
  display: flex;
  flex-direction: column;
  width: 95%;
  margin:0 auto; 
  margin-top: 0.5rem;
} 

.hot_block view p{
  display: block;
  text-overflow: ellipsis;
  overflow: hidden;
	white-space:nowrap; 
  line-height: 1.5rem;
}

/*店铺信息*/
.shop_info {
  height: 12rem;
  background-color: gray;
}

/*模板*/
.template_title > span{
  text-align: center;
  font-weight: bold;
  font-size: 1.2rem;
  line-height: 4rem;
  display: block;
}

/* components/search/search.wxss */
@import "search-font-icon/iconfont.wxss";

.top {
  width: 100%;
  box-sizing: border-box;
  padding: 0.4rem 0 0.4rem 0;
  background-color: #F1F1F1;
}

.top_block{
  margin: 0 auto;
  width: 95%;
  background-color: white;
  display: flex;
  font-size: 0.75rem;
  padding: 0.4rem;
  border-radius: 1rem/50%;
  box-sizing: border-box;
}

.top span{
  padding:0.2rem 0.4rem;
  font-size: 1rem;
}
.top input {
  flex: 1;
}

/* pages/confirmOrders/confirmOrders.wxss */
@import '/templates/address/address.wxss';

.main{ 
  padding: 1rem;
  height: 90vh;
	overflow-y:scroll;
  box-sizing: border-box;
}

.main > p:nth-of-type(1) {
  font-size: 1.3rem;
  font-weight: 500;
  margin-bottom: 0.5rem; 
} 

.address {
  height: 3.5rem;
  display: flex;
  align-items: center;
  padding: 0.5rem;
  margin-bottom: 1rem;
}
.address > span {
  color: rgb(231, 24, 102);
  display: inline-block;
  margin-right:0.5rem;
}

.address > view {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content : space-around;
  flex: 1;
}

.address > view p:nth-child(1) span:nth-child(1){
  padding-right: 0.5rem;
}


/*商品*/
.good{
  padding: 1rem;
  display: flex;
  align-items: stretch;
  margin-bottom: 1rem;
}

.good image{
  width: 5rem;
  margin-right: 1rem;
}

.good > view{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.good view view:nth-child(2){
  display: flex;
  justify-content: space-between;
}

/*留言*/
.message{
  display: flex;    
  align-items: center;
  padding: 0.5rem;
}

.message input{
  margin-left: 0.5rem;
  flex: 1;
  height: 100%;
  line-height: 100%;
}

/*总计*/
.main > p:nth-last-of-type(1){
  margin-top: 0.5rem;
  text-align: right;
  font-size: 1rem;
}

.main > p:nth-last-of-type(1) span{
  display: inline-block;
  margin-left: 0.5rem;
}


/*底部*/
.submit{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 10vh;
}

.submit p{
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}



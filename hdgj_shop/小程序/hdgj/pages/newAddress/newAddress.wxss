/* pages/newAddress/newAddress.wxss */
page{
  font-size: 0.85rem;

}

.main{
  height: 100%;
  padding: 1rem;
}

.main input{
  border:1px solid #EFEFEF;
  padding: 0.5rem;
  border-radius: 0.5rem;
  margin-bottom: 0.5rem;
}

.fotter{
  width:100%;
  position: fixed;
  bottom: 0;
  padding: 1rem;
  box-sizing: border-box;
}
.fotter p{
  width: 100%;
  border: 1px solid rgb(231, 24, 102);
  background: rgb(231, 24, 102);
  color: white;
  text-align: center;
  padding:0.5rem 0 0.5rem 0;
  border-radius: 2rem;
  margin-bottom: 0.5rem;
}

.fotter p:nth-child(2){
  color: rgb(231, 24, 102);
  background: white;
}
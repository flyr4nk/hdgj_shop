/* pages/orderDetails/orderDetails.wxss */
@import '/templates/address/address.wxss';

.page{
  padding: 1rem;
}

.page > p:nth-of-type(1){
  margin-bottom: 0.5rem;
}

.gi-v1{
  display: flex;
  padding-bottom: 1rem;
  border-bottom: 1px solid #ACACAC;
}
 
.gi-v1 image{
  width: 5rem;
  border-radius: 0.5rem;
}

.gi-v1-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 0.5rem;
}

.gi-v1-right > p:nth-of-type(1){
  display: flex;
  justify-content: space-between;
}

.gi-v1-right > p:nth-of-type(2),gi-v1-right{
  display: flex;
}

.gi-v2 > p{
  display: flex;
  justify-content: space-between;
  margin-top: 0.5rem
}

.orders-info{
  margin-top: 0.5rem;
}
.orders-info p{
  margin-bottom: 0.5rem;
}
.orders-info p span{
  padding-right: 2rem;
}

.pay{
  display: flex;
  justify-content: flex-end;
  margin-top: 2rem;
}

.pay span{
  border-radius: 2rem;
  padding: 0.5rem 2rem;
  border:1px solid #EDEDED;
}
.pay span:nth-child(2){
  margin-left: 0.5rem;
  border: 1px solid rgb(231, 24, 102) !important;
  color: rgb(231, 24, 102)!important;
}
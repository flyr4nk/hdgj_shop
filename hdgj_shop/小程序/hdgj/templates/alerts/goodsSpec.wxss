/* templates/alerts/goodsSpec.wxss */
#pageGoodsSpec{
  width: 100%;
  height: 92vh;
  top: 0;
  background-color: rgba(23, 18, 18, 0.22);
  position: fixed;
}

.goodsSpec{
  background-color: white;
  position: fixed;
  bottom: 8vh;
  width: 100%;
  height: 60vh;
  border-radius: 0.5rem 0.5rem 0 0;
}

.goodsSpec image{
  display: block;
  margin: 0 auto;
  position: relative;
  border-radius: 0.5rem;
  top: -10%;
  width: 25vw;
  height: 25vw;
  box-shadow: 0 0px 15px 3px rgba(219, 202, 202, 0.54);
}

.specs{
  padding: 1rem;
}
.specs p{
  margin: 0 0.5rem 0 0.5rem;
}

.spec{
  display: flex;
}

.spec view{ 
  display: flex;
  margin: 0.5rem 0 0.5rem 0;
}
.spec view span{
  display: block;
  padding: 0.2rem 0.5rem 0.2rem 0.5rem;
  text-align: center;
  margin: 0 0.5rem 0 0.5rem;
  border: 1px solid rgb(236, 236, 236);
  border-radius: 0.3rem;
}
.selected{
  background-color: rgb(231, 24, 102);
  color: white
}